-        - {{ compiler('cxx') }}
+        - {{ compiler('cxx') }}     # [ ppc_arch != "p10"]
         - cmake >=3.4.3
         - ninja  # [win]
         - make   # [unix]
@@ -134,7 +136,7 @@ outputs:
