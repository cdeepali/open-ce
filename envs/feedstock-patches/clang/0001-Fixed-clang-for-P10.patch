@@ -348,7 +350,8 @@ outputs:
         - mytest.cxx
       commands:
         - clang++ --version
-        - clang++ -v -c mytest.cxx
+        - clang++ --gcc-toolchain=$GCC_11_HOME -v -c mytest.cxx  # [ ppc_arch == "p10"]
+        - clang++ -v -c mytest.cxx  # [ ppc_arch != "p10"]
 
   - name: clang-format-{{ major_version }}
     script: install_clang_format.sh  # [unix]
